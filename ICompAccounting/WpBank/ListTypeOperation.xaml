<Window x:Class="ICompAccounting.WpBank.ListTypeOperations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ICompAccounting.WpBank"
        xmlns:mv="clr-namespace:ICompAccounting.WpBank.ModelView"
        mc:Ignorable="d"
        Title="ListOperations" Height="450" Width="800">
    <Window.DataContext>
        <mv:ListTypeOperationsMV/>
    </Window.DataContext>
    <Grid>
        <TextBox Text="{Binding Title}" />
        <DataGrid>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Код" Width="50"/>
                <DataGridTextColumn Header="Назва операції" Width="350"/>
                <DataGridTemplateColumn>
                    
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
