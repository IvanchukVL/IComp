<Window x:Class="ICompAccounting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ICompAccounting"
        mc:Ignorable="d"
        Height="450" Width="1000" WindowState="Maximized" Title="{Binding Title}">

    <Grid VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu DockPanel.Dock="Top" ItemsSource="{Binding Path=MainMenu}">
            <Menu.ItemContainerStyle>
                <Style>
                    <Setter Property="MenuItem.Header" Value="{Binding Header}" />
                    <Setter Property="MenuItem.ItemsSource" Value="{Binding Path=Items}" />
                    <Setter Property="MenuItem.Command" Value="{Binding Path=Command}" />
                </Style>
            </Menu.ItemContainerStyle>
        </Menu>
        <Rectangle Grid.Row="1" Fill="AliceBlue" />
    </Grid>
</Window>
