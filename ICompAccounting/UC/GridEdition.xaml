<UserControl x:Class="ICompAccounting.UC.GridEdition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mv="clr-namespace:ICompAccounting.UC.ModelView"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ICompAccounting.UC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="3 3 0 3">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="25" />
                    <Setter Property="Height" Value="25" />
                </Style>
            </StackPanel.Resources>
            <Button Command="{Binding NewRow}">
                <Image Source="\Images\new_file.png" />
            </Button>
            <Button Command="{Binding EditRow}">
                <Image Source="\Images\edit.png" />
            </Button>
            <Button Command="{Binding SaveRows}">
                <Image Source="\Images\save.png" />
            </Button>
            <Button>
                <Image Source="\Images\trash_can_delete.png" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
